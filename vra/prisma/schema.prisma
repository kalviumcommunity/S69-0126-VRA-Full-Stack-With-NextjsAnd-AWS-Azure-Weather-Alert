// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  alerts    Alerts[]
  floods    Floods[]
}

model Floods {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  parentId  Int?
  parent    Floods?   @relation("FloodsHierarchy", fields: [parentId], references: [id])
  tasks     Floods[]  @relation("FloodsHierarchy")
}

model Alerts {
  id        Int      @id @default(autoincrement())
  title     String
  status    String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}
